<Window x:Class="Percolator.Desktop.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Percolator.Desktop"
        xmlns:main="clr-namespace:Percolator.Desktop.Main"
        mc:Ignorable="d"
        Title="Percolator" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type main:MainDefaultViewmodel}">
            <main:MainDefault></main:MainDefault>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Settings"></MenuItem>
            </MenuItem>
        </Menu>
        <ContentControl 
            Content="{Binding
            SelectedViewmodel.Value}"></ContentControl>
    </DockPanel>
</Window>
